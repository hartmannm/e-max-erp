<link rel="stylesheet" href="/css/no-auth-area.css" />
<div class="container">
  <div class="card form-container">
    <div class="logo-container">
      <img src="/assets/logo.svg" alt="Logotipo" class="logo">
    </div>
    <div class="card-body">
      <form id="forgot-password-form" action="/password/forgot-password" method="POST">
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" name="email" id="email" class="form-control" value="{{passwordData.email}}" required />
        </div>
        <div class="d-flex flex-row-reverse">
          <div>
            <button class="btn btn-primary">Redefinir senha</button>
          </div>
        </div>
      </form>
      {{#if error}}
      <div class="alert alert-danger d-flex justify-content-center" role="alert">
        {{error.message}}
      </div>
      {{/if}}
      {{#if message}}
      <div class="alert alert-success d-flex justify-content-center" role="alert">
        {{message}}
      </div>
      {{/if}}
    </div>
  </div>
</div>
