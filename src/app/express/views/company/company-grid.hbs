{{> navbar}}
<div class="container">
  {{#if companies}}
  <div class="d-flex flex-row-reverse margim-bottom-15">
    <a class="btn btn-primary" href="/company/create" role="button">Cadastrar</a>
  </div>
  <table class="table table-hover" id="company-table">
    <thead class="table-dark">
      <tr>
        <th scope="col">Razão Social</th>
        <th scope="col">Nome Fantasia</th>
        <th scope="col">CNPJ</th>
        <th scope="col">Ações</th>
      </tr>
    </thead>
    <tbody>
      {{#each companies}}
      <tr class="hoverable column-row" id="{{_id}}">
        <td>{{name}}</td>
        <td>{{corporateName}}</td>
        <td>{{cnpj}}</td>
        <td class="grid-actions">
          <div class="dropdown">
            <button class="btn" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="fas fa-ellipsis-v"></i>
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
              <li><a class="dropdown-item" href="/company/{{_id}}/read">Consultar</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" href="/company/{{_id}}/update">Alterar</a></li>
            </ul>
          </div>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{else}}
  {{> no-data link="/company/create"}}
  {{/if}}
</div>
