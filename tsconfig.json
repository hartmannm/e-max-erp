{
  "compilerOptions": {
    "target": "esNext",
    "lib": [
      "es6",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "outDir": "./dist",
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true,
    "strictNullChecks": false
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}
